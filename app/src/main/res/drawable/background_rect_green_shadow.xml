<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
       <layer-list>
           <item
               android:bottom="0dp"
               android:right="0dp">
               <shape android:shape="rectangle">
                   <corners android:radius="15dp" />
                   <solid android:color="#3E515151" />
                   <gradient android:startColor="#46515151" />
                   <gradient android:endColor="#37515151" />
                   <padding
                       android:top="1dp"
                       android:right="3dp"
                       android:bottom="3dp"
                       android:left="1dp"
                       />

               </shape>
           </item>
           <item>
               <shape>
                   <corners android:radius="5dp" />
                   <gradient
                       android:centerColor="#287524"
                       android:endColor="#1B6319"
                       android:startColor="@color/dark_green"
                       android:type="linear" />
               </shape>
           </item>
       </layer-list>
    </item>

</selector>