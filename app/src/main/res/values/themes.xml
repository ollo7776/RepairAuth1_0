<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RepairAuth1_0.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.RepairAuth1_0" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#379A32</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_green</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/dark_red</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <!--    <style name="Theme.Material3.Light.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--    </style>-->

    <style name="CardView." parent="CardView">
        <item name="android:foreground">@drawable/gradient_service_card_records</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/dark_red</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="button_login_register">
        <item name="android:layout_margin">7dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_green</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="tvs_label_card_view">
        <item name="android:textColor">@color/extra_light_gray</item>
        <item name="android:textSize">20dp</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="tvs_card_view">
        <item name="android:textColor">@color/extra_light_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="tvs_title_card_view">
        <item name="android:textColor">@color/extra_light_gray</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">30dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="card_view_icon">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="tvs_label_card_view_a">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20dp</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="tvs_card_view_a">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="tvs_title_card_view_a">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">30dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>